<% include ../partials/header %>

<div class="row">
    <h1 class="text-center">Add New Comment to <%= place.name %></h1>
    <div class="form-box">
        <form action="/places/<%= place._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="author">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/places">Go Back To Places</a>
    </div>
</div>

<% include ../partials/footer %>