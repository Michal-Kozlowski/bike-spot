<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <h1>Welcome to BIKEspot</h1>
        <p>View most interesting bike places around Wroc≈Çaw</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/places/new">Add New Location</a>
        </p>
    </header>
    
    <div class="row text-center">
        <% places.forEach(function(place){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= place.image %>">
                        <div class="caption">
                            <h4><%= place.name %></h4>
                        </div>
                        <p>
                            <a href="/places/<%= place._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </img>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>